@model IEnumerable<PhoneDiary.Models.Person>

@{
    ViewBag.Title = "Ludzie";
    ConfirmationDTO confirmationDTO = new ConfirmationDTO { Id = "confirmationPerson", Function = "deletePerson" };
}

@Html.Partial("_ConfirmDelete", confirmationDTO)

<h2 class="center greenText">@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Dodaj", "Create", "", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td id="commandColumn">
                @Html.ActionLink("Edytuj", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" })
                <button class="btn btn-danger" onclick="showPopup(@item.ID, '#confirmationPerson')">Usuń</button>
            </td>
        </tr>
    }

</table>
