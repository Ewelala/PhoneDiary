@model PhoneDiary.Models.DTO.ConfirmationDTO
<div id="@Model.Id" class="hidden confirmation">
    <div class="popup">
        <p class="center">Czy na pewno chcesz usunąć?</p>
        <hr />
        <div class="center">
            <button class="btn btn-danger width100" onclick="@(Model.Function)()">Tak</button>
            <button class="btn btn-default width100" onclick="hide('#@Model.Id')">Anuluj</button>
        </div>
    </div>
</div>
